{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('manager_exercise') }}
{% endblock %}

{% block title %}
    <h1>Exercícios Cadastrados</h1>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mx-auto mt-5">
                {# Barra superior #}
                <div class="d-flex justify-content-between align-items-center mb-3 mx-3">

                    {# Pesquisa #}
                    <div class="input-group w-50">
                    <span class="input-group-text">
                        {{ ux_icon('material-symbols:search') }}
                    </span>
                        <input
                            type="text"
                            class="form-control"
                            placeholder="Pesquisar exercícios..."
                            id="search-exercise"
                        >
                    </div>

                    {# Botão novo #}
                    <button class="btn btn-sm btn-secondary open-new_exercise_modal"
                       data-bs-toggle="modal"
                       data-bs-target="#new_exercise_modal">
                        {{ ux_icon('material-symbols:add') }}
                        Novo
                    </button>

                </div>
                <div class="table-responsive shadow rounded bg-body p-3">
                    <table class="table table-striped table-hover align-middle text-center table-bordered">
                        <thead class="table">
                        <tr>
                            <th class="w-25">Nome</th>
                            <th class="w-50">Descrição</th>
                            <th class="w-25">Ações</th>
                        </tr>
                        </thead>
                        <tbody id="exercise-table">
                        {% for exec in exercises %}
                            <tr>
                                <td class="fw-bold">
                                    {{ exec.name }}
                                </td>

                                <td>
                                    {{ exec.description }}
                                </td>

                                <td class="d-flex justify-content-center">
                                    <a href="#"
                                       class="btn btn-sm btn-outline-primary mx-3">
                                        {{ ux_icon('material-symbols:edit') }}
                                    </a>

                                    <button class="btn btn-sm btn-outline-danger">
                                        {{ ux_icon('material-symbols:delete') }}
                                    </button>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center text-muted">
                                    Nenhum exercício encontrado.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

    {% include 'manager/exercise/components/_new_exercise_modal.html.twig' %}

{% endblock %}


