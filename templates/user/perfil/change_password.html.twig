{% extends 'base.html.twig' %}

{% block title %}Alteração de senha{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <h1>Olá {{ app.user.name }}</h1>
            <div class="col-md-4">

                {{ form_errors(changePasswordForm) }}

                {{ form_start(changePasswordForm) }}
                {{ form_row(changePasswordForm.currentPassword, {label: 'Senha Atual'}) }}
                {{ form_row(changePasswordForm.plainPassword.first, {label: 'Nova Senha'}) }}
                {{ form_row(changePasswordForm.plainPassword.second, {label: 'Confirmar Senha'}) }}
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Atualizar</button>
                    <!-- Button trigger modal -->
                    <a href="{{ path('user_perfil') }}" class="btn btn-secondary">Voltar</a>
                </div>
                {# Token de segurança para evitar o CSRF #}
                {{ form_widget(changePasswordForm._token) }}
                {# don't render unrendered fields #}
                {{ form_end(changePasswordForm, {render_rest: false}) }}
            </div>
        </div>
    </div>
{% endblock %}
